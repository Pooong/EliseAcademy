<div class="mt-4">
	<div class="row">
		{{#each courses}}
			<div class="col-sm-6 col-lg-4 mt-4">
				<div class="shadow card wrap-card" style="width: 18rem;">
					<a class="link-course" href="/courses/{{this.slug}}" data-name={{this.name}}>
						<img class="card-img-top img-product" src="{{this.image}}" alt="{{this.name}} Card image cap" />
					</a>

					<div class="card-body">
						<a class="link-course" href="/courses/{{this.slug}}" data-name={{this.name}}>
							<h5 class="card-title">{{this.name}}</h5>
						</a>
						<p class="card-text text-item">{{this.description}}</p>
						<a href="#" class="btn btn-primary">Mua khóa học</a>
					</div>
				</div>
			</div>

		{{/each}}
	</div>
</div>